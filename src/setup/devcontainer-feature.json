{
    "id": "setup",
    "name": "setup Fedora Environment üßä‚òïÔ∏èü™∂",
    "version": "0.2.0",
    "description": "Setup your Fedora devcontainer Environment",
    "options": {
      "username": {
          "type": "string",
          "description": "Auto use existing user with home dir or create remote-user",
          "default": "automatic"
      },
        "copr": {
            "type": "string",
            "description": "Add Copr Repositories.automatic Recognizes ENV variables of packages to add their copr repos",
            "default": "automatic"
        },
        "dnfInstall": {
            "type": "string",
            "description": "packages installed by default separated by whitespaces. automatic installs requirements including those of other settings ",
            "default": "automatic"
        },
        "remove": {
            "type": "string",
            "description": "Remove packages from Image",
            "default": "automatic"
        },
        "languageSupport": {
            "type": "string",
            "description": "Install additional language support. Language Support is distributed in own scripts(Currently only for go)",
            "default": "automatic"
        }
    },
    "containerEnv": {
        "GOROOT": "/usr/local/go",
        "GOPATH": "/go",
        "PATH": "/usr/local/go/bin:/go/bin:${PATH}"
    },
    "capAdd": [
        "SYS_PTRACE"
    ],
    "securityOpt": [
        "seccomp=unconfined"
    ],
    "init": true,
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			"extensions": [
                "golang.Go",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"yzhang.markdown-all-in-one",
				"bierner.markdown-preview-github-styles",
				"formulahendry.github-actions",
				"ms-azuretools.vscode-docker"
			],
			// Applies only to vscode.  Downloads the repo into targetPath and runs  setup.sh to finalize the integration.  
			"settings": {
				// "dotfiles.repository": "${localEnv:GITHUB_USERNAMENAME}/dotfiles",
				// "dotfiles.targetPath": "~/.local/share/chezmoi",
				// "dotfiles.installCommand": "setup.sh",
				// Recommended settings to apply when working in container. Change theme and font to your preference.
					"files.autoSave": "afterDelay",
					"workbench.colorTheme": "Catppuccin Mocha",
					"editor.smoothScrolling": true,
					"terminal.integrated.lineHeight": 1.5,
					"editor.fontLigatures": true,
					"editor.lineHeight": 1.5,
					"editor.minimap.enabled": false,
					"editor.tabSize": 2,
					"workbench.iconTheme": "material-icon-theme",
					"editor.semanticTokenColorCustomizations": {
						"enabled": true
					},
					"editor.semanticHighlighting.enabled": true,
					"files.eol": "\n",
					"extensions.ignoreRecommendations": true,
					"task.problemMatchers.neverPrompt": {
						"shell": true
					}
			}
		}
	}
}
