{
	"name": "Coffedora Go-Workspace",
	"image": "quay.io/fedora/fedora-minimal:39",
	// ðŸ‘‡ Local Features will be distributed via template and Dev Container compatibility on top of a minimal image
	// Name is required. Set "Username":"root" to skip user Creation.
	// Unset values, empty strings or  string of value "false" will skip the part of the feature requireded the value. 
	// More info: https://containers.dev/implementors/features.
	"features": {
		"ghcr.io/coffedora/feature/setup:latest": {
			"userName": "${localEnv:GH_TOKEN}${templateOption:userName}",
			"copr": "${templateOption:copr}",
			"dnfInstall": "${templateOption:dnfInstall}",
			"dnfRemove": "${templateOption:dnfRemove}",
			"languageSupport": "${templateOption:languageSupport}"
		}
	},
	"remoteEnv": {
		"GH_TOKEN": "${localEnv:GH_TOKEN}",
		"GITHUB_USER": "${localEnv:GITHUB_USER}"
	},
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			"extensions": [
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"yzhang.markdown-all-in-one",
				"bierner.markdown-preview-github-styles",
				"formulahendry.github-actions",
				"ms-azuretools.vscode-docker"
			],
			// Applies only to vscode.  Downloads the repo into targetPath and runs  setup.sh to finalize the integration.  
			"settings": {
				// "dotfiles.repository": "${localEnv:GITHUB_USERNAME}/dotfiles",
				// "dotfiles.targetPath": "~/.local/share/chezmoi",
				// "dotfiles.installCommand": "setup.sh",
				// Recommended settings to apply when working in container. Change theme and font to your preference.
				"files.autoSave": "afterDelay",
				"workbench.colorTheme": "Catppuccin Mocha",
				"editor.smoothScrolling": true,
				"terminal.integrated.lineHeight": 1.5,
				"editor.fontLigatures": true,
				"editor.lineHeight": 1.5,
				"editor.minimap.enabled": false,
				"editor.tabSize": 2,
				"workbench.iconTheme": "material-icon-theme",
				"editor.semanticTokenColorCustomizations": {
					"enabled": true
				},
				"editor.semanticHighlighting.enabled": true,
				"files.eol": "\n",
				"extensions.ignoreRecommendations": true,
				"task.problemMatchers.neverPrompt": {
					"shell": true
				}
			}
		}
	},
	"remoteUser": "${templateOption:user}"
}