{
	// Example Tasks for a devcontainercli project
	"version": "2.0.0",
	"presentation": {
		"panel": "dedicated",
		"focus": false,
		"revealProblems": "onProblem"
	},
	"windows": {
		"options": {
			"shell": {
				"executable": "wls.exe"
			}
		}
	},
	//env variables are used to pass arguments to the tasks
	"options": {
		"env": {
			"feature": "setup",
			"baseImage": "quay.io/fedora/fedora-minimal:latest",
		}
	},
	"tasks": [
		{
			"label": "cleanup",
			"type": "shell",
			"command": "rm -rdf /tmp/devcontainercli/ | true && rm -rdf /tmp/${feature} | true && docker rm -vf $(docker ps -aq) |true ",
			"problemMatcher": []
		},
		{
			"label": "connect",
			"type": "shell",
			"command": "docker exec -it $(docker ps -lq) bash"
		},
		{
			"label": "test-autogenerated",
			"type": "shell",
			"command": "devcontainer features test --skip-scenarios -f ${feature} -i ${baseImage} .",
			"group": {
				"kind": "test",
				"isDefault": false
			},
			"dependsOn": [
				"cleanup"
			]
		},
		{
			"label": "test-scenarios",
			"type": "shell",
			"command": "devcontainer features test -f ${feature} --skip-autogenerated --skip-duplicated .",
			"group": {
				"kind": "test",
				"isDefault": false
			},
			"dependsOn": [
				"cleanup"
			]
		},
		{
			"label": "test-global",
			"type": "shell",
			"command": "devcontainer features test --global-scenarios-only .",
			"dependsOn": [
				"cleanup"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": []
		}
	]
}
