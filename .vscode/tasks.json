{
	// Example Tasks for a devcontainercli project
	"version": "2.0.0",
	"problemMatcher": [],
	"windows": {
		"options": {
			"shell": {
				"executable": "wls.exe"
			}
		}
	},
	// distraction free mode for passiv tasks 
	"presentation": {
		"panel": "dedicated",
		"focus": false,
		"revealProblems": "onProblem",
		"reveal": "always",
		"close": false,
		"showReuseMessage": false,
	},
	//env variables are used to pass arguments to the tasks
	"options": {
		"env": {
			"feature": "setup",
			"baseImage": "quay.io/fedora/fedora-minimal:latest",
		}
	},
	"tasks": [
		{
			"label": "clean",
			"command": "make",
			"type": "shell",
			"args": [
				"clean"
			],
			"presentation": {
				"close": true,
			},
			"group": {
				"kind": "none",
				"isDefault": false
			},
		},
		{
			"label": "test_global",
			"dependsOn":[
				"clean"
			],
			"command": "make",
			"type": "shell",
			"args": [
				"test_global"
			],
			"group": {
				"kind": "test",
				"isDefault": false
			},
		},
		{
			"label": "test_scenarios",
			"dependsOn":[
				"clean"
			],
			"command": "make",
			"type": "shell",
			"args": [
				"test_scenarios"
			],
			"group": {
				"kind": "test",
				"isDefault": false
			},
		},
		{
			"label": "test",
			"dependsOn":[
				"clean",
			],
			"type": "shell",
			"command": "make",
			"args": [
				"act"
			],
			"group": {
				"kind": "test",
				"isDefault": false
			},
			"presentation": {
				"echo": true,
				"focus": true,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			},
		}
	]
